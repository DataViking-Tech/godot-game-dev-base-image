{
	"name": "Godot Game Dev Image Development",
	"image": "ghcr.io/dataviking-tech/godot-game-dev:v2", //Primary image
	//"image": "ghcr.io/dataviking-tech/ai-dev-base:v2",  // Fallback

	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"dockerDashComposeVersion": "v2"
		}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker"
			]
		}
	},

	"mounts": [
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],

	"postCreateCommand": "echo 'Using godot-game-dev:v2 to develop next version'",

	"remoteUser": "vscode"
}
